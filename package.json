{
  "name": "finn",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "client-install": "npm ci --prefix client",
    "start": "node ./bin/www",
    "server": "nodemon ./bin/www",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "test": "jest",
    "client-test": "npm test --prefix client",
    "heroku-postbuild": "cd client && npm install --only=dev && npm install && npm run build"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/client/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/client/"
    ]
  },
  "dependencies": {
    "concurrently": "^5.1.0",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "currency.js": "^1.2.2",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "exceljs": "^3.8.2",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "moment": "^2.24.0",
    "morgan": "~1.9.1",
    "multer": "^1.4.2"
  },
  "devDependencies": {
    "jest": "^24.9.0",
    "nodemon": "^2.0.3",
    "supertest": "^4.0.2"
  }
}
